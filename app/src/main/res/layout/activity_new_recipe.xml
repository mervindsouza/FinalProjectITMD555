<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewRecipeActivity">

    <EditText
        android:id="@+id/field_recipe_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/five_dp_padding"
        android:layout_marginLeft="@dimen/sixteen_dp_margin"
        android:layout_marginRight="@dimen/sixteen_dp_margin"
        android:layout_marginTop="@dimen/sixteen_dp_margin"
        android:hint="Title"
        android:maxLines="1" />

    <EditText
        android:id="@+id/field_recipe_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/field_recipe_title"
        android:layout_marginBottom="@dimen/five_dp_padding"
        android:layout_marginLeft="@dimen/sixteen_dp_margin"
        android:layout_marginRight="@dimen/sixteen_dp_margin"
        android:layout_marginTop="@dimen/five_dp_padding"
        android:hint="Recipe Goes Here..."
        android:inputType="textMultiLine"
        android:maxLines="50"
        android:scrollHorizontally="false" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_submit_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/sixteen_dp_margin"
        android:src="@drawable/navigation_checkmark" />

</RelativeLayout>